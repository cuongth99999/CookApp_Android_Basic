<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Profile"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#AA5EB6"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageButton
            android:backgroundTint="#AA5EB6"
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_avatar"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/avatar"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameProfile"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/avatar"
            android:text="email"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmailProfile"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/avatar"
            android:text="Phone"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_save"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnMyRecipe"
        android:backgroundTint="#934848"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Bài đăng của tôi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="23dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="360dp"
        android:layout_height="70dp"
        app:cornerRadius="18dp"/>

    <Button
        android:id="@+id/btnAddRecipe"
        android:backgroundTint="#934848"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Thêm bài đăng"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginLeft="23dp"
        android:layout_width="360dp"
        android:layout_height="70dp"
        app:cornerRadius="18dp"/>

    <Button
        android:id="@+id/txtSignOut"
        android:textStyle="bold"
        android:backgroundTint="#CD70DD"
        android:textColor="#000000"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        android:text="Sign Out"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>